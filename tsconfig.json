{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "./src", 
    "outDir": "./dist"
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"] 
}